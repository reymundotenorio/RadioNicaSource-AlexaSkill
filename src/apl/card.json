{
  "type": "APL",
  "version": "1.9",
  "mainTemplate": {
    "parameters": ["payload"],
    "items": [
      {
        "type": "Container",
        "height": "100%",
        "width": "100%",
        "items": [
          {
            "type": "Text",
            "id": "cardComponent",
            "text": "${payload.component_data.properties.initText}",
            "textAlign": "center",
            "textAlignVertical": "center",
            "maxLines": 3,
            "grow": 1
          }
        ]
      }
    ]
  }
}
