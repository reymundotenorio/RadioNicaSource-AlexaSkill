  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.5.0"
    }
  ],
  "mainTemplate": {
    "parameters": ["payload"],
    "item": [
      {
        "type": "AlexaHeadline",
        "id": "backgroundPlaComponent",
        "primaryText": "${payload.PLA_DATA.properties.title}",
        "headerBackButton": false,
        "headerAttributionImage": "${payload.PLA_DATA.properties.logoUrl}",
        "headerAttributionPrimacy": true,
        "backgroundImageSource": "${payload.PLA_DATA.properties.backgroundUrl}",
        "backgroundColorOverlay": false
      }
    ]
  }
}
